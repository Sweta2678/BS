$(function() {
$("#search-site").focus(function() {
		if($(this).val() == "SEARCH") {
			$(this).val("");
		}
	});
$("#search-site").blur(function() {
		if($(this).val() == "") {
			$(this).val("SEARCH");
		}
	});
  });
